%p
  %label{:for => 'fixture_fullpath'} Request fullpath*
  %input.wide#fixture_fullpath{:type => 'text', :name => 'fixture[fullpath]', :value => @fixture.fullpath}

%p
  %label{:for => 'fixture_content'} Content*
  %textarea.wide#fixture_content{:name => 'fixture[content]', :rows => 10}= @fixture.content

%p
  %label{:for => 'fixture_description'} Description
  %textarea.wide#fixture_description{:name => 'fixture[description]', :rows => 3}= @fixture.description

%p
  %input{:type => 'submit', :value => 'Save'}
  |
  %a{:href => 'javascript:history.back()'} back
