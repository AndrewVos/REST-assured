#!/usr/bin/env ruby

$:.push File.expand_path('../../lib', __FILE__)

require 'optparse'
require 'fake_rest_services/config'

OptionParser.new do |opts|
  opts.on('-e', '--environment production|test|development') do |env|
    AppConfig[:environment] = env
  end
  opts.on('-d', '--database FILENAME') do |fname|
    AppConfig[:database] = fname
  end
  opts.on('-p', '--port PORT', Integer) do |port|
    AppConfig[:port] = port
  end
end.parse!

require 'fake_rest_services'

FakeRestServices::Application.run!
